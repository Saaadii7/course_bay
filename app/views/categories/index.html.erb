<h1 align="center"> Welcome to Categories Page </h1>

  <div class="row" align="center" >
    <td><%= link_to('Create New Category', new_category_path , method: :get, class: "btn btn-large btn-primary")%></td>

  </div>

<div id="categories" class="tab-pane">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each_with_index do |category,index| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= link_to('Edit', edit_category_path(category), class: "btn btn-large btn-primary")%></td>
            <td><%= link_to('Delete', category_path(category), method: :delete, class: "btn btn-large btn-primary")%></td>
            <!-- <td><%#= image_tag user.image_url, class: "image_table_display"%></td> -->
            <%#= render :partial => 'images/image', :locals => {:image => image} %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
