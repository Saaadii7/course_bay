<h1 align="center"> Welcome to Post Page </h1>

<div id="posts" class="tab-pane">
    <div class="row" align="center">
      <td><%= link_to('Create New Post', new_post_path , method: :get, class: "btn btn-large btn-primary")%></td>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Percentage Off</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each_with_index do |post,index| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.name %></td>
            <td><%= post.description %></td>
            <td><%= post.price %></td>
            <td><%= post.quantity %></td>
            <td><%= post.percentage_off %></td>
            <td><%= image_tag post.photo_url, class: "image_table_display"%></td>
            <!-- <td><%#= image_tag user.image_url, class: "image_table_display"%></td> -->
            <td><%= link_to('Update', edit_post_path(post.id), class: "btn btn-large btn-primary")%></td>
            <td><%= link_to('Delete', post_path(post.id), method: :delete, class: "btn btn-large btn-primary")%></td>
              <%#= render :partial => 'images/image', :locals => {:image => image} %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
