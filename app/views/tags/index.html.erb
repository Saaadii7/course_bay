<h1 align="center"> Welcome to Categories Page </h1>

  <div class="row" align="center" >
    <td><%= link_to('Create New Tag Type', new_tag_path , method: :get, class: "btn btn-large btn-primary")%></td>

  </div>

<div id="categories" class="tab-pane">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @tags.each_with_index do |tag,index| %>
          <tr>
            <td><%= tag.id %></td>
            <td><%= tag.name %></td>
            <td><%= link_to('Edit', edit_tag_path(tag), class: "btn btn-large btn-primary")%></td>
            <td><%= link_to('Delete', tag_path(tag), method: :delete, class: "btn btn-large btn-primary")%></td>
            <!-- <td><%#= image_tag user.image_url, class: "image_table_display"%></td> -->
            <%#= render :partial => 'images/image', :locals => {:image => image} %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
