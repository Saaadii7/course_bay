<div class= 'row'>
	<div class='col-xs-12'>
		<%= form_for(@tag, :html => {class: "form-horizontal", role: "form"}) do |f|%>
		<div class= "form-group">
			<%= f.label :name%>
			<%= f.text_field :name, class: "form-control",  autofocus: true %>
		</div>
		<div  class="form-group">
			<label>For Categories</label><br>
			<%#= f.select :category, options_for_select(Category.all), {:prompt => "Please select"}, {:multiple => true, :size=> 5,:class => "chzn-select", :style => "width:450px;" } %>
			<%= f.select( :category_ids, Category.all.collect {|p| [ p.name, p.id ] }, 
				{ :include_blank => false,:include_hidden => false},
				{ :multiple => true, :size => 5, :class => "chosen" }) %>
		</div>	

		<div class="form-group">
				<label>For SubCategories</label><br>
				<%= f.select(:sub_category_ids, SubCategory.all.collect {|p| [ p.name, p.id ] }, 
					{ :include_blank => false,:include_hidden => false },
					{ :multiple => true, :size => 5, :class => "chosen" }) %>
		</div>
				
		<div  class="form-group">
					<label>For Brands</label><br>
					<%= f.select(:brand_ids, Brand.all.collect {|p| [ p.name, p.id ] }, 
						{ :include_blank => false,:include_hidden => false}, 
						{ :multiple => true, :size => 5, :class => "chosen"}) %>
						<%#= f.collection_select :category_id, Category.all, :id, :name  %>
		</div>

		<div class="form-group">
			<%= f.submit class:'btn btn-primary btn-lg'%>
		</div>

		<% end %>
	</div>
</div>
