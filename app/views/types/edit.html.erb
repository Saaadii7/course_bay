<div class= 'row'>
	<div class='col-xs-12'>
		<%= form_for(@type, :html => {class: "form-horizontal", role: "form"}) do |f|%>
		<div class= "form-group">
			<%= f.label :name%>
			<%= f.text_field :name, class: "form-control", placeholder: "Name of the Category", autofocus: true %>
		</div>

		<div class="form-group">
			<%= f.submit class:'btn btn-primary btn-lg'%>
		</div>

		<% end %>
	</div>
</div>
