<h1 align="center"> Welcome to Orders Page </h1>

<div id="posts" class="tab-pane">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Order Id</th>
          <th>User Address</th>
          <th>Cart id</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each_with_index do |order,index| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.address_id %></td>
            <td><%= order.cart_id %></td>
            <td><%= order.status%></td>
            <td><%= link_to('Confirm', edit_order_path(order.id), class: "btn btn-large btn-primary")%></td>
            <td><%= link_to('Delete', order_path(order.id), method: :delete, class: "btn btn-large btn-primary")%></td>
              <%#= render :partial => 'images/image', :locals => {:image => image} %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
