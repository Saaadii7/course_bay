<div class= 'row'>
	<div class='col-xs-12'>
		<%= form_for(@city, :html => {class: "form-horizontal", role: "form"}) do |f|%>
		<div class= "form-group">
			<%= f.label :name%>
			<%= f.text_field :city_name, class: "form-control", autofocus: true %>
			<%= f.label :province%>
		 <%= collection_select("city", "province_id", Province.all, "id", "province_name") %>
		</div>


		<div class="form-group">
			<%= f.submit class:'btn btn-primary btn-lg'%>
		</div>
		<% end %>
	</div>
</div>
