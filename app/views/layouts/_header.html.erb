<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
				<div class="modal-body modal-body-sub_agile">
				<div class="col-md-8 modal_body_left modal_body_left1">
				<h3 class="agileinfo_sign">Sign In <span>Now</span></h3>


				<%= form_for(:user, :url => session_path(:user)) do |f| %>
				<%= f.label :email %>
					<%= f.email_field :email, :required => 'required' %>
					<%= f.label :password %>
					<%= f.password_field :password, :required => 'required' %>
		   	    <%= f.check_box :remember_me %>
			    <%= f.label :remember_me %>
			    <div class="actions">
			    <%= f.submit 'Sign in' %>
			    <%= link_to "Forgot your password?", new_password_path(:user) %>
			    </div>
			    <% end %>

				<div class="clearfix"></div>

				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		<!-- //Modal content-->
	</div>
</div>


<div class="modal fade" id="myModal2" tabindex="-1" role="dialog">
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
				<div class="modal-body modal-body-sub_agile" id="register-form" >
				<div class="col-md-8 modal_body_left modal_body_left1">
				<h3 class="agileinfo_sign">Sign Up <span>Now</span></h3>


				<%= form_for(:user, :url => registration_path(:user), :html => { :id => "register-form"}) do |f| %>
					<%= f.label :first_name , autofocus: true, :required => 'true'%>
					<%= f.text_field :first_name, autofocus: true,:required =>'true'%>
					<%= f.label :last_name %> 
					<%= f.text_field :last_name, autofocus: true,:required => 'required' %>
					<%= f.label :username %>
					<%= f.text_field :username, autofocus: true, :required => 'required' %>
					<%= f.label :gender,:required => 'required' %>	
					<%= f.radio_button :gender, 'Male', :checked => true %> Male
					<%= f.radio_button :gender, 'Female' %> Female
					<div>
					<%= f.label :email %>
						<%= f.email_field :email, :required => 'required' %>
					</div>
				    <%= f.label :password %>
				 	<% if @minimum_password_length %>
				 		<em>(<%= @minimum_password_length %> characters minimum)</em>
					<% end %><br />
				 	<%= f.password_field :password, autocomplete: "off",:required => 'required' %>
     				<%= f.label :password_confirmation %>
					<%= f.password_field :password_confirmation, autocomplete: "off",:required => 'required' %>
				    <div class="actions">
				    	<%= f.submit 'Sign up' %>
				    </div>
			    <% end %>

				<div class="clearfix"></div>

				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		<!-- //Modal content-->
	</div>
</div>		


