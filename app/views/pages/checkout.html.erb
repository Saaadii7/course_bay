  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container wow fadeIn">

      <!-- Heading -->
      <h2 class="my-5 h2 text-center">Checkout form</h2>

      <!--Grid row-->
      <div class="row">

        <!--Grid column-->
        <div class="col-md-8 mb-4">

          <!--Card-->
          <div class="card">

            <!--Card content-->
              <div class="row">

                <!--Grid column-->
                <div class="col-md-6 mb-2">

                  <!--firstName-->
                  <div class="md-form ">
                    <label for="firstName" class="">First Name</label>
                    <input type="text" id="firstName" class="form-control" value="<%= @user.first_name%>" disabled>
                  </div>

                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-md-6 mb-2">

                  <!--lastName-->
                  <div class="md-form">
                    <label for="lastName" class="">Last name</label>
                    <input type="text" id="firstName" class="form-control" value="<%= @user.last_name%>" disabled>
                  </div>

                </div>
                <!--Grid column-->

              </div>
              <!--Grid row-->

              <!--Username-->
              <div class="md-form input-group pl-0 mb-5">
                <label for="lastName" class="">Username</label>
                <input type="text" id="firstName" class="form-control" value="<%= @user.username%>" disabled>
              </div>

              <!--email-->
              <div class="md-form mb-5">
                <label for="email" class="">Email</label>
                <input type="text" id="firstName" class="form-control" value="<%= @user.email%>" disabled>
              </div>

              <!--address-->
              <div class="md-form mb-5">
                <label for="address" class="">Address</label>
                <input type="text" id="firstName" class="form-control" value="<%= @user.address.address %>" disabled>
              </div>
              <!--Grid row-->
              <div class="row">

                <!--Grid column-->
                <div class="col-lg-4 col-md-6 mb-4">
                  <label for="address" class="">Province </label>
                  <input type="text" id="firstName" class="form-control" value="<%= @user.address.province.name %>" disabled>
                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-lg-4 col-md-6 mb-4">
                  <label for="address" class="">City </label>
                  <input type="text" id="firstName" class="form-control" value="<%= @user.address.city.name %>" disabled>
                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-lg-4 col-md-6 mb-4">

                  <label for="zip">Zip</label>
                  <input type="text" id="firstName" class="form-control" value="<%= @user.address.postal_code %>" disabled>
                </div>
                <!--Grid column-->

              </div>
              <!--Grid row-->
              <hr>
              <div class="row">
                <div class="d-block my-3">
                  <div class="custom-control">
                    <label for="zip">  Payment Method</label>
                  <input type="text" id="firstName" class="form-control" value="<%= @paymentmethod.first.name %>" disabled>
                  </div>
                </div>
              </div>
              
                <%=form_tag({:controller => "orders", :action => "create"}, :method => "post") do -%>
                    <%= hidden_field_tag(:user_id, current_user.id) %>
                    <%= hidden_field_tag(:cart_id, current_user.cart.id) %>
                    <%= hidden_field_tag(:address_id, current_user.address.id) %>
                    <%= hidden_field_tag(:payment_method_id, @paymentmethod.first.id) %>
                    <div><%= submit_tag 'Confirm Order',  :class => "btn btn-primary btn-lg btn-block" %></div>
                <% end -%>
            </div>
            <!--/.Card-->

          </div>
          <!--Grid column-->

          <!--Grid column-->
          <div class="col-md-4 mb-4">

            <!-- Heading -->
            <h4 class="d-flex justify-content-between align-items-center mb-3">
              <span class="text-muted">Your cart</span>
              <span class="badge badge-secondary badge-pill"><%= @user.cart.shopping_carts.count%></span>
            </h4>

            <!-- Cart -->
            <ul class="list-group mb-3 z-depth-1">
              <div style="height: 482px;overflow-y: auto;">
                <% Cart.find_or_create_by(user_id: current_user.id).shopping_carts.each do |sc,index| %>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                  <div>
                    <h6 class="my-0"><%= sc.post.name %></h6>
                    <del class="text-muted"><%= sc.post.price %></del>
                  </div>
                  <span class="text-muted"><%= sc.post.price %></span>
                  <%=form_tag({:controller => "carts", :action => "delete_products"}, :method => "delete") do -%>
                  <%= hidden_field_tag(:shopping_cart_id, sc.id )%>
                  <div><%= submit_tag 'Remove Product',  :class => "btn btn-primary btn-lg btn-block" %></div>
                  <%end%>
                   
                </li>
                <% end %>
              </div>

              <li class="list-group-item d-flex justify-content-between bg-light">
                <div class="text-success">
                  <h6 class="my-0">Promo code</h6>
                  <small>EXAMPLECODE</small>
                </div>
                <span class="text-success">-0</span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <span>Total (Rs)</span>
                <strong><%=@user.cart.total_price%></strong>
              </li>
            </ul>
            <!-- Cart -->

            <!-- Promo code -->
            <form class="card p-2">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Promo code" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <div class="input-group-append">
                  <button class="btn btn-secondary btn-md waves-effect m-0" type="button">Redeem</button>
                </div>
              </div>
            </form>
            <!-- Promo code -->

          </div>
          <!--Grid column-->

        </div>
    </div>
        <!--Grid row-->

      </div>
    </main>
    <!--Main layout-->
