<div class="container_contact">

  <%= form_tag("/send_email", method: "post") do %>
    
    <div class="field">
      <%= label_tag(:email, "Email Address:") %>
      <%= email_field_tag(:email) %>
    </div>

    <div class="field">
      <%= label_tag(:subject, "Subject:") %>
      <%= text_field_tag(:subject) %>
    </div>

    <%= submit_tag("Email Us Now!") %>
  <% end %>

</div>