<h1 align="center"> Welcome to Users Page </h1>

<div id="customers" class="tab-pane">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>DOB</th>
          <th>Gender</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each_with_index do |user,index| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.dob %></td>
            <td><%= user.gender %></td>
            <td><%= image_tag user.image_url, class: "image_table_display"%></td>
            <td><%= link_to('Edit', destroy_user_session_path, method: :delete, class: "btn btn-large btn-primary")%></td>
            <td><%= link_to('Delete', destroy_user_session_path, method: :delete, class: "btn btn-large btn-primary")%></td>
              <%#= render :partial => 'images/image', :locals => {:image => image} %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
