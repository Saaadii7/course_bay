<h1 align="center"> Welcome To Brands Page </h1><br><br>


  <div class="row" align="center" >
    <td><%= link_to('Create New Brand', new_brand_path , method: :get, class: "btn btn-large btn-primary")%></td>

  </div>

<div id="brands" class="tab-pane">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Image</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @brands.each_with_index do |brand,index| %>
          <tr>
            <td><%= brand.id %></td>
            <td><%= brand.name %></td>
            <td><%= image_tag brand.photo_url, class: "image_table_display"%></td>
            <td>
              <%= link_to('Edit', edit_brand_path(brand), class: "btn btn-large btn-primary")%>
              <%= link_to('Delete', brand_path(brand), method: :delete, class: "btn btn-large btn-primary")%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
