<div class= 'row'>
	<div class='col-xs-12'>
		<%= form_for(@brand, :html => {class: "form-horizontal", role: "form"}) do |f|%>
		<div class= "form-group">
			<%= f.label :name%>
			<%= f.text_field :name, class: "form-control", placeholder: "Name of the Brand", autofocus: true %>
		</div>
		<div class= "form-group">
			<%= f.label :Categories%>
		<%= f.select(:category_ids, Category.all.collect {|p| [ p.name, p.id ] }, 
			{ :include_hidden => false }, 
			{ :multiple => true, :size => 5, :class => "chosen" }) %>
		</div>

			<div class="form-group">
				<%= f.submit class:'btn btn-primary btn-lg'%>
			</div>

			<% end %>
	</div>
</div>
